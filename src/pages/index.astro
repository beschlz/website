---
import Layout from "../layouts/Layout.astro";
import PersonalInfoCard from "../components/PersonalInfoCard.astro";
import SkillArea from "../components/SkillArea";
import StationsArea from "../components/StationsArea.astro";
import IntroArea from "../components/IntroArea.astro";
import NavBar from "../components/NavBar.astro";
---

<Layout title="bschulz.dev">
  <main>
    <section
      id="aboutme"
      class="mr-0 mt-10 flex flex-row flex-wrap justify-between md:mt-40"
    >
      <IntroArea />
      <div
        class="ml-4 mr-4 mt-10 flex items-center align-middle md:ml-12 md:ml-6 md:mr-12 md:content-end md:items-end md:justify-end"
      >
        <div class="flex w-full items-center md:items-end md:justify-end">
          <PersonalInfoCard />
        </div>
      </div>
    </section>
    <section
      id="stations"
      class="ml-4 mt-36 flex max-w-[780px] flex-col md:ml-12"
    >
      <h2 class="mb-4 font-mono text-3xl">Stationen</h2>
      <StationsArea />
    </section>
    <section id="skills" class="ml-6 mt-32 md:ml-12">
      <h2 class="mb-4 font-mono text-3xl">Skills</h2>
      <SkillArea client:load />
    </section>
  </main>
</Layout>
