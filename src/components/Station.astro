---
import EventCard from "./EventCard.astro";

const { year, points, events } = Astro.props;
type Event = {
  type: "education" | "job";
  text: string;
};
---

<div class="grid mb-4 grid-cols-8">
  <div class="flex flex-col items-start ml-1">
    <span
      class="bg-secondaryColor shadow-md w-[36px] min-w-[36px] h-[36px] min-h-[36px] rounded-full inline-block mb-4"
    ></span>
    <div
      class="h-[80%] rounded-full ml-[17px] border border-solid border-translucentWhite"
    >
    </div>
  </div>
  <div class="flex flex-col items-start mt-[5px] col-span-6">
    <p class="font-bold mb-4">{year}</p>
    {points?.map((point: string) => <p class="mb-4">{point}</p>)}
    {events?.map((e: Event) => <EventCard type={e.type} text={e.text} />)}
  </div>
</div>
